<link rel="stylesheet" href="/css/profile.css"> 


<% if(locals.user) { %>

<section id="container">
    <h3>Dashboard</h3>
</section>

<div id="UserDashboard">

    <section id="basicDetails">
        <div id="userName">
            <h4>
            <%= user.name%></h4>
        </div>
        <div id="userEmail">
            <h4>
                <%= user.email%></h4><br>
        </div>
    </section>

    

    <section id="updatePassword">
        <form action="/user/update?id=<%=user.id%>" method="POST">
            <input type="password" name="password" placeholder="Update Password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"><br>
            <input type="submit" value="Update Password">
        </form>
    </section>

    

    <section id="resetPassword">
        <form action="/user/reset?id=<%=user.id%>" method="POST">
            <input type="password" name="oldpassword" placeholder="Old Password"><br>
            <input type="password" name="newpassword" placeholder="New Password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" ><br>
            <input type="password" name="confirmPassword" placeholder="Retype Password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" ><br>
            <input type="submit" value="Reset Password">
        </form>
    </section>
</div>


    
                
                
<%} %>
