<html>
    <head>
        <title>User-Auth | <%= title %></title>
        <link rel="icon" href="https://securityintelligence.com/wp-content/uploads/2018/10/si-advanced-authentication-feature.jpg" type="image" size="16x16">
        <link rel="stylesheet" href="/css/layout.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css" integrity="sha512-0p3K0H3S6Q4bEWZ/WmC94Tgit2ular2/n0ESdfEX8l172YyQj8re1Wu9s/HT9T/T2osUw5Gx/6pAZNk3UKbESw==" crossorigin="anonymous" />
        <%- style %>
    </head>
    <body>

        <%- include('_header'); %>

        

        <main id="layout-main">
            <%- body %>
        </main>
        
        
        <%- include('_footer'); %>
        

        <%- script %>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js" integrity="sha512-lOrm9FgT1LKOJRUXF3tp6QaMorJftUjowOWiDcG5GFZ/q7ukof19V0HKx/GWzXCdt9zYju3/KhBNdCLzK8b90Q==" crossorigin="anonymous"></script>
        <script>
            <% if(flash.success && flash.success.length > 0){%>
                new Noty({
                        theme:'relax',
                        text: '<%=flash.success%>',
                        type: 'success',
                        layout:'topRight',
                        timeout : 1500
                    }).show();
        <%} %>

        <% if(flash.error && flash.error.length > 0){%>
                new Noty({
                        theme:'relax',
                        text: '<%=flash.error%>',
                        type: 'error',
                        layout:'topRight',
                        timeout : 1500
                    }).show();
        <%} %>

        <% if(flash.info && flash.info.length > 0){%>
                new Noty({
                        theme:'relax',
                        text: '<%=flash.info%>',
                        type: 'error',
                        layout:'topRight',
                        timeout : 3500
                    }).show();
        <%} %>
    </script>
    </body>
</html>